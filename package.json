{
  "name": "appointments-api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/http/server.js",
  "scripts": {
    "dev": "tsx watch src/main/http/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main/http/server.js",
    "test": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^3.0.3",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.2",
    "pino": "^9.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.8",
    "prisma": "^7.3.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "vitest": {
    "environment": "node",
    "include": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "src/**/__tests__/**/*.ts"
    ]
  }
}
